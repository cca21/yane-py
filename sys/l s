from os import listdir
from sys import argv
# obselete, due to walk command
if len(argv) > 1:
	for i in argv[1:]:
		print(i+" "+", ".join(listdir(i)))
else:
	print(' sys/: '+', '.join(listdir('./sys' )))
	print('prog/: '+', '.join(listdir('./prog')))
	print('   ./: '+', '.join(listdir('.')))